{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build Auto-Garden",
            "command": "/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "main.cpp",
                "garden_manager.cpp",
                "-o",
                "${workspaceFolder}/Auto-Garden.exe",
                "-I${workspaceFolder}/include",
                "-I/mingw64/include",
                "-I/mingw64/include/splashkit",
                "-L/mingw64/lib",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-lboost_system-mt",
                "-lspdlog",
                "-lfmt",
                "-lsplashkit",
                "-static-libgcc",
                "-static-libstdc++"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build task for the Automated Garden Management System."
        }
    ]
}
